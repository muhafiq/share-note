<main class="container mx-auto py-8 min-h-screen">
  <h1 class="text-3xl text-center font-semibold mb-8">Pilihan Harga</h1>
  <div class="flex flex-col items-center lg:flex-row justify-center">
    <% prices.forEach(price => { %>
    <div
      class="min-w-96 mb-4 md:max-w-xs rounded overflow-hidden shadow-lg mx-4"
    >
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-primary"><%= price.name %></div>
        <p class="text-gray-700 text-base"><%= price.description %></p>
        <p class="text-gray-700 text-lg font-semibold mt-2">
          <%= price.price %>
        </p>
        <button
          class="py-4 px-8 rounded-full bg-primary text-white font-bold shadow-md hover:bg-accent duration-150"
        >
          Buy
        </button>
      </div>
    </div>
    <% }); %>
  </div>
</main>
